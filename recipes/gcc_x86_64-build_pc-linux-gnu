#|pkg name $target-gcc
#|pkg dep $target-binutils
#|pkg dep $target-gcc-common
#|pkg dep $target-glibc-devel /$target/sys-root
#|pkg + /bin
#|pkg + /*-*
#|pkg + /include
#|pkg + /lib*/gcc
#|pkg + /share/man/man1
#|pkg name $target-gcc-common
#|pkg + /share/gcc-*
#|pkg + /share/info
#|pkg +? /share/locale
#|pkg + /share/man/man7
#|pkg name $target-gcc-debug
#|pkg + /lib/debug
