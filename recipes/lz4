EXTRAFLAGS=
case $target in
    powerpc* | mips*)
	EXTRAFLAGS='-DCPU_HAS_EFFICIENT_UNALIGNED_MEMORY_ACCESS=1'
        ;;
esac
make CC=$target-gcc CFLAGS="$target_opt_flags"' -std=c99 -Wall -Wextra -Wundef -Wshadow -Wcast-align -Wstrict-prototypes -pedantic -DLZ4_VERSION=\"$(RELEASE)\" '"$EXTRAFLAGS" $parallel
make CC=$target-gcc CFLAGS="$target_opt_flags"' -std=c99 -Wall -Wextra -Wundef -Wshadow -Wcast-align -Wstrict-prototypes -pedantic -DLZ4_VERSION=\"$(RELEASE)\" '"$EXTRAFLAGS" install DESTDIR=$destdir PREFIX=/usr LIBDIR=/usr/$lib

$recipes/strip_debug --strip-all $target $destdir /usr/lib/debug /
