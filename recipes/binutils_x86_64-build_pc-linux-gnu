NOISOLATION=1
PATH=$srcdir/bootstrap/bin:$PATH . $recipes/binutils64
mkdir -p $destdir/devel/usr
mv $destdir/{include,$lib} $destdir/devel/usr
if test $lib = lib; then
    mkdir $destdir/lib
    mv $destdir/devel/usr/lib/debug $destdir/lib
fi
